<form action="/usuario/Adiciona" method="post">
    @Html.AntiForgeryToken()
   
    <label for="nome">Nome:</label>
    <input id="nome" name="usuario.Nome" value="@ViewBag.Usuario.Nome" class="form-control" maxlength="40" />
    @Html.ValidationMessage("usuario.Nome")
    <br />
    <label for="preco">E-Mail:</label>
    <input id="preco" name="usuario.Email" value="@ViewBag.Usuario.Email" class="form-control" maxlength="50" />
    @Html.ValidationMessage("usuario.Email")
    <br />
    <label for="quatnidade">Senha:</label>
    <input id="quatnidade" name="usuario.Senha" value="@ViewBag.Usuario.Senha" class="form-control" maxlength="10" />
    @Html.ValidationMessage("usuario.Senha")
    <br />
    <input type="submit" value="Cadastrar" />
   <br />
    @Html.ActionLink("Voltar para a lista de produtos", "Index", "Produto")
    

</form>

        <form action="/CategoriaDoProduto/Adiciona" method="post">
            @Html.ValidationMessage("categoriaDoProduto.Descricao", null, new { @class = "label btn-danger" })
            @Html.ValidationMessage("categoriaDoProduto.Nome", null, new { @class = "label btn-danger" })
            <br /><br />
            <div class="row nav-divider">
                <div class="col-md-2 text-right">
                    <label for="nome">Nome:</label>
                </div>
                <div class="col-md-10">
                    <input id="nome" name="categoriaDoProduto.Nome" value="@ViewBag.categoria.Nome"  class="input-sm" maxlength="30" size="30" />        
                 <br /> 
                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-2 text-right">
                    <label for="nome">Descrição:</label>
                </div>

                <div class="col-md-10">
                    <input id="nome" name="categoriaDoProduto.Descricao" value="@ViewBag.categoria.Descricao" class="input-sm" maxlength="50" size="50" />
                    <br />
                </div>

            </div>
                <br />
            <div class="col-md-12">
                @Html.ActionLink("Listar", "Index", "CategoriaDoProduto", null, new { @class = "btn btn-info  pull-right" })
                <input type="submit" value="Incluir" class="btn btn-info pull-right" />
            </div>
</form>

